                <li><p class="small"><strong>{{ days[1].hour[4].time|date("h:i") }} |{{ days[1].hour[4].temp_c |round }}°C</strong></p></li>
                <li><p class="small"><strong>{{ days[1].hour[6].time|date("h:i") }} |{{ days[1].hour[6].temp_c |round }}°C</strong></p></li>
