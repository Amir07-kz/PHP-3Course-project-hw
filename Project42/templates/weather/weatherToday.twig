                <li><p class="small"><strong>{{ days[1].hour[10].time|date("h:i") }} |{{ days[1].hour[10].temp_c |round }}°C</strong></p></li>
                <li><p class="small"><strong>{{ days[1].hour[12].time|date("h:i") }}  |{{ days[1].hour[12].temp_c |round }}°C</strong></p></li>
            </div>
            <div class="flex-column">
                <p class="mb-0">{{ days[2].date |date("D d") }}</p>
                <img src="{{ ImgWeather3Day }}" width="50px">
                <p class="small"><strong>{{ days[2].day.maxtemp_c|round }}°</strong>|<strong style="color: #5d5d5d">{{ days[2].day.mintemp_c|round }}°</strong></p>
                <br>
                <li><p class="small"><strong>{{ days[2].hour[2].time|date("h:i") }} | {{ days[2].hour[2].temp_c |round }}°C</strong></p></li>
                <li><p class="small"><strong>{{ days[2].hour[4].time|date("h:i") }} |{{ days[2].hour[4].temp_c |round }}°C</strong></p></li>
