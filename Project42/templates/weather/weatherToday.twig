{% extends '../main/base.html.twig' %}

{% block title %}Weather today{% endblock %}

{% block body %}
    <style>
        * {
            margin: 0;
            padding: 0;
            outline: none;
            overflow: scroll;
        }

        body {
            font-family: 'Roboto', sans-serif;
            overflow: hidden;
            background: #009688;;
        }

        div.widget {
            position: relative;
            width: 30%;
            height: 30% ;
            margin: 70px auto;
            background-color: #fcfdfd;
            border-radius: 9px;
            padding: 25px;
            padding-right: 30px;
            box-shadow: 0px 31px 35px -26px #080c21;
        }

        div.widget2 {
            position: relative;
            width: 70%;
            height: 30% ;
            margin: 50px auto;
            background-color: #fcfdfd;
            border-radius: 9px;
            padding: 25px;
            padding-right: 30px;
            box-shadow: 0px 31px 35px -26px #080c21;
        }

        div.widget3 {
            position: relative;
            width: 90%;
            height: 30% ;
            margin: 50px auto;
            background-color: #fcfdfd;
            border-radius: 9px;
            padding: 25px;
            padding-right: 30px;
            box-shadow: 0px 31px 35px -26px #080c21;
        }

        div.date {
            font-size: 15px;
            font-weight: bold;
            color: rgba(0,0,0,0.5);
            padding: 4%;
        }

        div.city {
            font-size: 21px;
            font-weight: bold;
            text-transform: uppercase;
            padding-top: 5px;
            color: rgba(0,0,0,0.7);
        }

        div.temp {
            font-size: 41px;
            color: rgba(0,0,0,0.9);
            font-weight: 100;
        }

        div.svgtemp{
            font-size: 10px;
            flex-wrap: nowrap;
            padding: 4%;
            color: #8488a7;
        }

        div.panel {
            display: inline-block;
        }

        div.right-panel {
            position: absolute;
            float: right;
            top: 0;
            margin-top: 6px;
            padding-left: 1px;
        }

        ul {
            font-size: 30px;
            display: flex;
            list-style: none;
            justify-content: space-between;
        }

        .up {
        }

        .down {
            margin-top: 10%;
        }

        .back {
            font-size: 50px;
            width: 50px;
            background-color: #009688;
            border: none;
        }

        .widget3 .down{
            margin: 0;
        }
    </style>

    <input class="back" onclick="history.back();" value="←"/>
    <div class="widget">
        <div class="left-panel panel">
            <div class="city">
                <h1><strong>{{ address }}</strong></h1>
            </div>
            <div class="date">
                <h2>{{ days[0].date|date("l d") }}<a>{{ days[0].hour[0].time|date(" g:ia") }}</a></h2>
            </div>
            <div class="temp">
                <h2>{{ temp_c|round }}<a style="font-size: 20px; color: gray">°C | °F</a></h2>
            </div>
            <div class="svgtemp">
                <h2 style="color: red"><img src="">Днём: {{ days[0].day.maxtemp_c|round }} °C | °F</h2>
                <h2 style="color: deepskyblue"><img src="">Ночью: {{ days[0].day.mintemp_c|round }} °C | °F</h2>
            </div>
        </div>
        <div class="right-panel panel">
            <img style="width: 100px" src="{{ ImgWeather1Day }}">
            <h2>{{ weather }}</h2>
            <h3 style="color: gray; font-size: 17px">Сила ветра {{ winSpeed }}м/с <br> Уровень давления {{ pressure }} <br> Влажность {{ humidity }}%</h3>
        </div>
    </div>
    <div class="widget2">
        <div>
            <ul class="up">
                <li><p>{{ days[0].hour[2].time|date("h:i") }}<br>am</p></li>
                <li><p>{{ days[0].hour[4].time|date("h:i") }}<br>am</p></li>
                <li><p>{{ days[0].hour[6].time|date("h:i") }}<br>am</p></li>
                <li><p>{{ days[0].hour[8].time|date("h:i") }}<br>am</p></li>
                <li><p>{{ days[0].hour[10].time|date("h:i") }}<br>am</p></li>
                <li><p>{{ days[0].hour[12].time|date("h:i") }}<br>am</p></li>
            </ul>
        </div>
        <div>
            <ul class="down">
                <li><p class="small"><strong>{{ days[0].hour[2].temp_c |round }}°C</strong></p></li>
                <li><p class="small"><strong>{{ days[0].hour[4].temp_c |round }}°C</strong></p></li>
                <li><p class="small"><strong>{{ days[0].hour[6].temp_c |round }}°C</strong></p></li>
                <li><p class="small"><strong>{{ days[0].hour[8].temp_c |round }}°C</strong></p></li>
                <li><p class="small"><strong>{{ days[0].hour[10].temp_c |round }}°C</strong></p></li>
                <li><p class="small"><strong>{{ days[0].hour[12].temp_c |round }}°C</strong></p></li>
            </ul>
        </div>
    </div>
    <div class="widget3">
        <div style="padding-left: 33%">
            <h1 style="padding: 5%">Погода на 5 дней </h1>
        </div>
        <hr>
        <ul class="down">
            <div class="flex-column">
                <p class="mb-0">{{ days[0].date |date("D d") }} </p>
                <img src="{{ ImgWeather1Day }}" width="50px">
                <p class="small"><strong>{{ days[0].day.maxtemp_c|round }}°</strong>|<strong style="color: #5d5d5d">{{ days[0].day.mintemp_c|round }}°</strong></p>
                <br>
                <li><p class="small"><strong>{{ days[0].hour[2].time|date("h:i") }} | {{ days[0].hour[2].temp_c |round }}°C</strong></p></li>
                <li><p class="small"><strong>{{ days[0].hour[4].time|date("h:i") }} | {{ days[0].hour[4].temp_c |round }}°C</strong></p></li>
                <li><p class="small"><strong>{{ days[0].hour[6].time|date("h:i") }} | {{ days[0].hour[6].temp_c |round }}°C</strong></p></li>
                <li><p class="small"><strong>{{ days[0].hour[8].time|date("h:i") }} | {{ days[0].hour[8].temp_c |round }}°C</strong></p></li>
                <li><p class="small"><strong>{{ days[0].hour[10].time|date("h:i") }} | {{ days[0].hour[10].temp_c |round }}°C</strong></p></li>
                <li><p class="small"><strong>{{ days[0].hour[12].time|date("h:i") }} | {{ days[0].hour[12].temp_c |round }}°C</strong></p></li>
            </div>
            <div class="flex-column">
