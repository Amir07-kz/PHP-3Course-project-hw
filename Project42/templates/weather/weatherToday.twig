                <li><p class="small"><strong>{{ days[3].hour[12].time|date("h:i") }}  |{{ days[3].hour[12].temp_c |round }}°C</strong></p></li>
            </div>
            <div class="flex-column">
                <p class="mb-0">{{ days[4].date |date("D d") }}</p>
                <img src="{{ ImgWeather4Day }}" width="50px">
                <p class="small"><strong>{{ days[4].day.maxtemp_c|round }}°</strong>|<strong style="color: #5d5d5d">{{ days[4].day.mintemp_c|round }}°</strong></p>
                <br>
                <li><p class="small"><strong>{{ days[4].hour[2].time|date("h:i") }} | {{ days[3].hour[2].temp_c |round }}°C</strong></p></li>
                <li><p class="small"><strong>{{ days[4].hour[4].time|date("h:i") }} |{{ days[3].hour[4].temp_c |round }}°C</strong></p></li>
                <li><p class="small"><strong>{{ days[4].hour[6].time|date("h:i") }} |{{ days[3].hour[6].temp_c |round }}°C</strong></p></li>
                <li><p class="small"><strong>{{ days[4].hour[8].time|date("h:i") }} |{{ days[3].hour[8].temp_c |round }}°C</strong></p></li>
                <li><p class="small"><strong>{{ days[4].hour[10].time|date("h:i") }} |{{ days[3].hour[10].temp_c |round }}°C</strong></p></li>
                <li><p class="small"><strong>{{ days[4].hour[12].time|date("h:i") }}  |{{ days[3].hour[12].temp_c |round }}°C</strong></p></li>
            </div>
        </ul>
    </div>
{% endblock %}
