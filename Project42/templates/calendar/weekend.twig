        {% for j in range(1,calendar.firstday - 1) %}
            <td>-</td>
        {% endfor %}
        {% for item in calendar.items %}
        <td class="{% if item.isWeekend %}weekend{% endif %}">
            {{ item.day }}
        </td>
        {% if item.weekday == 7 %}
    </tr>
    <tr>
        {% endif %}
        {% endfor %}
        {% endif %}
        {% if calendar.last < 7 %}
            {% for j in range(1,7 - calendar.last) %}
                <td>-</td>
            {% endfor %}
        {% endif %}
    </tr>
</table>
